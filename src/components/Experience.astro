---
import { getI18n } from "../i18n/ui";
import ExperienceItem from "./ExperienceItem.astro"

const { currentLocale = "es" } = Astro;
const i18n = getI18n({ currentLocale })

const EXPERIENCIE = i18n.MAIN_PAGE.EXPERIENCE
---
<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3.5">  
    <li class="mb-10 ms-4">
        <ExperienceItem 
            title={EXPERIENCIE.JOB_1.TITLE},
            date={EXPERIENCIE.JOB_1.DATE},
            desc={EXPERIENCIE.JOB_1.DESCRIPTION}
        />
    </li>
    <li class="mb-10 ms-4">
        <ExperienceItem 
            title={EXPERIENCIE.JOB_2.TITLE},
            date={EXPERIENCIE.JOB_2.DATE},
            desc={EXPERIENCIE.JOB_2.DESCRIPTION}
        />
    </li>                  
</ol>